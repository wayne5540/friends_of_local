<h1>地陪</h1>


<div class = "users">
  
  <% @users.each do |user| %>
	  <div class="grapper">
	  	<a class="div_button" href="users/<%= user.id %>"></a>
	    <div class="users_photo">
	      <img src=<%= user.profile_photo || "http://goo.gl/gdibQ" %> alt=<%= user.name %>>
	    </div>
	    <div class="basic_info" >
	      <h1>
	        <%= user.name %>
	      </h1>
	      <span>
	        <%= user.sex %>
	      <span>
	      
	      <p>
	        <b>所在國家(區域):</b> <%= user.country %>  <b>,所在城市:</b> <%= user.city %>
	      </p>
	      <p>
	        <b>使用語言:</b><%= user.language %>
	      </p>
	      <p>
	        <b>地陪簡介:</b><%= raw user.introduce %>
	      </p>
	    </div>
	    <div class="clear"></div>
	  </div>
  <% end %>
  
</div>